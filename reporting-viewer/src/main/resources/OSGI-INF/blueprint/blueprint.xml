<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:jaxrs="http://cxf.apache.org/blueprint/jaxrs"
           xmlns:cxf="http://cxf.apache.org/blueprint/core"
           xsi:schemaLocation="
  http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
  http://cxf.apache.org/blueprint/jaxrs http://cxf.apache.org/schemas/blueprint/jaxrs.xsd
  http://cxf.apache.org/blueprint/core http://cxf.apache.org/schemas/blueprint/core.xsd
  ">
    <cxf:bus>
        <cxf:features>
            <cxf:logging/>
        </cxf:features>
    </cxf:bus>


    <jaxrs:server id="saikuReportViewerService" address="/reportviewer">
        <jaxrs:serviceBeans>
            <ref component-id="saikuReportViewerServiceBean"/>
        </jaxrs:serviceBeans>
    </jaxrs:server>

    <reference interface="org.pentaho.reporting.engine.classic.core.ReportingInterface" id="reportingService"/>

    <bean id="saikuReportViewerServiceBean" class="org.saiku.reportviewer.server.api.ReportServerImpl"
          init-method="init">
        <property name="myservice" ref="reportingService"/>
    </bean>


</blueprint>
